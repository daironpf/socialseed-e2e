"""Test: Booking Workflow

Run: pytest services/booking_demo/modules/10_booking_workflow.py
"""

from datetime import datetime, timedelta
from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_workflow(page)


def run_workflow(page: BasePage):
    services_resp = page.get("/api/services")
    assert services_resp.status == 200
    
    service = services_resp.json()[0]
    service_id = service["id"]
    
    today = datetime.now().date()
    start_date = today.strftime("%Y-%m-%d")
    avail_resp = page.get("/api/services/{service_id}/availability", params={"start_date": start_date})
    assert avail_resp.status == 200
    
    future_time = (datetime.now() + timedelta(days=7)).replace(hour=16, minute=0, second=0)
    appt_resp = page.post("/api/appointments", data={
        "service_id": service_id,
        "user_id": "workflow_user",
        "start_time": future_time.isoformat(),
        "notes": "Test booking workflow"
    })
    assert appt_resp.status == 200
    appointment = appt_resp.json()
    
    list_resp = page.get("/api/appointments", params={"user_id": "workflow_user"})
    assert list_resp.status == 200
    
    return appointment

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()