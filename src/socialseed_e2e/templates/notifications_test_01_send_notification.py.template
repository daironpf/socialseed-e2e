"""Test: Send Notification

Run: pytest services/notifications_demo/modules/01_send_notification.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

def run(page: BasePage):
    response = page.post("/api/notifications", data={
        "user_id": "user1", "channel": "email", "subject": "Test", "body": "Hello!"
    })
    assert response.status == 200
    data = response.json()
    assert data["user_id"] == "user1"
    assert data["channel"] == "email"
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()