"""Test: Send and Get Messages

This test demonstrates:
- POST with response
- Pagination

Run:
    pytest services/chat_demo/modules/05_messages.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_send(page)


def run_send(page: BasePage):
    response = page.post(
        "/api/rooms/room_1/messages",
        data={
            "sender_id": "user_1",
            "content": "Hello from test!",
            "message_type": "text"
        }
    )
    assert response.status == 200
    data = response.json()
    assert data["content"] == "Hello from test!"
    return data


def run_get(page: BasePage):
    response = page.get("/api/rooms/room_1/messages?per_page=10")
    assert response.status == 200
    data = response.json()
    assert len(data) > 0
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()