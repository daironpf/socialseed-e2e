"""Test: Send and Get Messages

This test demonstrates:
- POST with response
- Pagination

Run:
    pytest services/chat_demo/modules/05_messages.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


async def run_send(page: BasePage):
    response = await page.post(
        f"{BASE_URL}/api/rooms/room_1/messages",
        data={
            "sender_id": "user_1",
            "content": "Hello from test!",
            "message_type": "text"
        }
    )
    assert response.status == 200
    data = response.json()
    assert data["content"] == "Hello from test!"
    return data


async def run_get(page: BasePage):
    response = await page.get(f"{BASE_URL}/api/rooms/room_1/messages?per_page=10")
    assert response.status == 200
    data = response.json()
    assert len(data) > 0
    return response


if __name__ == "__main__":
    import asyncio
    from playwright.async_api import async_playwright
    async def main():
        async with async_playwright() as p:
            browser = await p.chromium.launch()
            page = await browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            await run_send(base_page)
            await browser.close()
    asyncio.run(main())
