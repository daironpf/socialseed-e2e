"""Test: List Services

Run: pytest services/booking_demo/modules/01_list_services.py
"""

from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    response = page.get("/api/services")
    assert response.status == 200
    data = response.json()
    assert len(data) >= 3
    for svc in data:
        assert "id" in svc
        assert "name" in svc
        assert "duration_minutes" in svc
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()