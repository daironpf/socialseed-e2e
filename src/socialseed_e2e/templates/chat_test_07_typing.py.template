"""Test: Typing Indicators

This test demonstrates:
- Real-time status indicators
- Short-lived state

Run:
    pytest services/chat_demo/modules/07_typing.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_send_typing(page)


def run_send_typing(page: BasePage):
    response = page.post(
        "/api/rooms/room_1/typing",
        data={"user_id": "user_1", "is_typing": True}
    )
    assert response.status == 200
    return response


def run_get_typing(page: BasePage):
    response = page.get("/api/rooms/room_1/typing")
    assert response.status == 200
    data = response.json()
    assert isinstance(data, list)
    return response


def run_stop_typing(page: BasePage):
    response = page.post(
        "/api/rooms/room_1/typing",
        data={"user_id": "user_1", "is_typing": False}
    )
    assert response.status == 200
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()