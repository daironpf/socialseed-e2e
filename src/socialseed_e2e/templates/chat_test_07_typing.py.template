"""Test: Typing Indicators

This test demonstrates:
- Real-time status indicators
- Short-lived state

Run:
    pytest services/chat_demo/modules/07_typing.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


async def run_send_typing(page: BasePage):
    response = await page.post(
        f"{BASE_URL}/api/rooms/room_1/typing",
        data={"user_id": "user_1", "is_typing": True}
    )
    assert response.status == 200
    return response


async def run_get_typing(page: BasePage):
    response = await page.get(f"{BASE_URL}/api/rooms/room_1/typing")
    assert response.status == 200
    data = response.json()
    assert isinstance(data, list)
    return response


async def run_stop_typing(page: BasePage):
    response = await page.post(
        f"{BASE_URL}/api/rooms/room_1/typing",
        data={"user_id": "user_1", "is_typing": False}
    )
    assert response.status == 200
    return response


if __name__ == "__main__":
    import asyncio
    from playwright.async_api import async_playwright
    async def main():
        async with async_playwright() as p:
            browser = await p.chromium.launch()
            page = await browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            await run_send_typing(base_page)
            await browser.close()
    asyncio.run(main())
