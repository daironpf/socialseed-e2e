"""Test: Templates

Run: pytest services/notifications_demo/modules/05_templates.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_create(page)


def run_create(page: BasePage):
    response = page.post("/api/templates", data={"name": "test_tpl", "channel": "email", "subject_template": "Hi {{name}}", "body_template": "Hello {{name}}!"})
    assert response.status == 200
    return response

def run_list(page: BasePage):
    response = page.get("/api/templates")
    assert response.status == 200
    data = response.json()
    assert len(data) > 0
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()