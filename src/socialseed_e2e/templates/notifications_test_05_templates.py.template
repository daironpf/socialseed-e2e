"""Test: Templates

Run: pytest services/notifications_demo/modules/05_templates.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

async def run_create(page: BasePage):
    response = await page.post(f"{BASE_URL}/api/templates", data={"name": "test_tpl", "channel": "email", "subject_template": "Hi {{name}}", "body_template": "Hello {{name}}!"})
    assert response.status == 200
    return response

async def run_list(page: BasePage):
    response = await page.get(f"{BASE_URL}/api/templates")
    assert response.status == 200
    data = response.json()
    assert len(data) > 0
    return response

if __name__ == "__main__":
    import asyncio
    from playwright.async_api import async_playwright
    async def main():
        async with async_playwright() as p:
            browser = await p.chromium.launch()
            page = await browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            await run_list(base_page)
            await browser.close()
    asyncio.run(main())
