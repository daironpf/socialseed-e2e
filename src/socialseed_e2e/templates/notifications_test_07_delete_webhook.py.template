"""Test: Delete Webhook

Run: pytest services/notifications_demo/modules/07_delete_webhook.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

def run(page: BasePage):
    create_resp = page.post("/api/webhooks", data={"url": "https://test.com/hook", "events": ["test"]})
    webhook = create_resp.json()
    del_resp = page.delete("/api/webhooks/{webhook['id']}")
    assert del_resp.status == 200
    return del_resp

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()