"""Test: Cancel Appointment

Run: pytest services/booking_demo/modules/06_cancel_appointment.py
"""

from datetime import datetime, timedelta
from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    future_date = (datetime.now() + timedelta(days=3)).replace(hour=11, minute=0, second=0)
    create_resp = page.post("/api/appointments", data={
        "service_id": "svc_2",
        "user_id": "user2",
        "start_time": future_date.isoformat()
    })
    appointment = create_resp.json()
    appointment_id = appointment["id"]
    
    cancel_resp = page.post("/api/appointments/{appointment_id}/cancel", params={"user_id": "user2"})
    assert cancel_resp.status == 200
    
    get_resp = page.get("/api/appointments/{appointment_id}", params={"user_id": "user2"})
    data = get_resp.json()
    assert data["status"] == "cancelled"
    return get_resp

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()