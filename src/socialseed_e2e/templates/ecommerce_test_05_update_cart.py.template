"""Test: Update Cart

This test demonstrates:
- PUT requests
- Quantity validation
- Cart updates

Run:
    pytest services/ecommerce_demo/modules/05_update_cart.py
"""

import pytest
from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5004"


def run(page: BasePage):
    """Execute the test - update cart item quantity."""
    user_id = "test_user_1"
    product_id = "prod_1"
    
    page.post(
        "/api/cart/items",
        data={"user_id": user_id, "product_id": product_id, "quantity": 1}
    )
    
    response = page.put(
        "/api/cart/items/{product_id}",
        data={"quantity": 5},
        params={"user_id": user_id}
    )
    
    assert response.status == 200
    
    item = response.json()
    assert item["quantity"] == 5
    
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()