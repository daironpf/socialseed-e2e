from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

def run(page: BasePage):
    resp = page.get("/api/notifications", params={"user_id": "user1", "status": "delivered"})
    assert resp.status == 200
    data = resp.json()
    for n in data:
        assert n["status"] == "delivered"
    return resp

def run_all(page: BasePage):
    resp = page.get("/api/notifications", params={"user_id": "user1"})
    assert resp.status == 200
    return resp

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()