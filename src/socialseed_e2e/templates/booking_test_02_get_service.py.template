"""Test: Get Service Details

Run: pytest services/booking_demo/modules/02_get_service.py
"""

from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    response = page.get("/api/services/svc_1")
    assert response.status == 200
    data = response.json()
    assert data["id"] == "svc_1"
    assert data["name"] == "Corte de cabello"
    return response

def run_not_found(page: BasePage):
    response = page.get("/api/services/nonexistent")
    assert response.status == 404
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()