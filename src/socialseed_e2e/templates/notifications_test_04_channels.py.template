"""Test: Channels and Priorities

Run: pytest services/notifications_demo/modules/04_channels.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_channels(page)


def run_channels(page: BasePage):
    response = page.get("/api/channels")
    assert response.status == 200
    data = response.json()
    assert "channels" in data
    return response

def run_priority(page: BasePage):
    response = page.post("/api/notifications", data={"user_id": "user1", "channel": "push", "body": "Urgent!", "priority": "high"})
    assert response.status == 200
    assert response.json()["priority"] == "high"
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()