"""Test: Message Threading

This test demonstrates:
- Reply/reply_to relationships
- Threaded conversations

Run:
    pytest services/chat_demo/modules/09_threads.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_reply(page)


def run_reply(page: BasePage):
    response = page.post(
        "/api/rooms/room_1/messages",
        data={
            "sender_id": "user_2",
            "content": "This is a reply",
            "message_type": "text",
            "reply_to": "msg_1"
        }
    )
    assert response.status == 200
    data = response.json()
    assert data["reply_to"] == "msg_1"
    return data


def run_get_threaded(page: BasePage):
    response = page.get("/api/rooms/room_1/messages?per_page=20")
    assert response.status == 200
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()