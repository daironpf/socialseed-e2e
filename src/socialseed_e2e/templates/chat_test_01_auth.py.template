"""Test: User Authentication

This test demonstrates:
- User registration
- User login
- Token handling

Run:
    pytest services/chat_demo/modules/01_auth.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_login(page)


def run_register(page: BasePage):
    """Execute the test - register new user."""
    response = page.post(
        "/api/auth/register",
        data={
            "username": "newuser",
            "display_name": "New User",
            "password": "password123"
        }
    )
    
    assert response.status == 200
    data = response.json()
    assert data["username"] == "newuser"
    assert data["status"] == "online"
    
    return response


def run_login(page: BasePage):
    """Execute the test - login user."""
    response = page.post(
        "/api/auth/login",
        data={
            "username": "alice",
            "password": "password123"
        }
    )
    
    assert response.status == 200
    data = response.json()
    assert "token" in data
    assert data["user"]["username"] == "alice"
    
    return response


def run_login_invalid(page: BasePage):
    """Execute the test - login with invalid credentials."""
    response = page.post(
        "/api/auth/login",
        data={
            "username": "alice",
            "password": "wrongpassword"
        }
    )
    
    assert response.status == 401
    
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()