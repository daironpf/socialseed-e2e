"""Test: Multi-channel Notifications

Run: pytest services/notifications_demo/modules/08_multi_channel.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

def run(page: BasePage):
    channels = ["email", "sms", "push", "webhook"]
    for ch in channels:
        resp = page.post("/api/notifications", data={"user_id": "user1", "channel": ch, "body": f"Test via {ch}"})
        assert resp.status == 200
    return resp

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()