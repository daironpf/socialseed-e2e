"""WebSocket Demo Configuration for socialseed-e2e"""

from pydantic import BaseModel


class WebSocketConfig(BaseModel):
    base_url: str = "http://localhost:50052"
    ws_url: str = "ws://localhost:50052/ws"
    health_endpoint: str = "/health"
    timeout: int = 30
    
    default_channels: list[str] = ["general", "notifications", "updates"]
    max_clients: int = 100
    message_history_size: int = 100


CONFIG = WebSocketConfig()
