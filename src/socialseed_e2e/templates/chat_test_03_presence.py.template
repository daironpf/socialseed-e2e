"""Test: Presence Management

This test demonstrates:
- PUT requests
- State updates

Run:
    pytest services/chat_demo/modules/03_presence.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    response = page.put(
        "/api/users/user_1/presence",
        data={"status": "away"}
    )
    assert response.status == 200
    data = response.json()
    assert data["status"] == "away"
    return response


def run_invalid_status(page: BasePage):
    response = page.put(
        "/api/users/user_1/presence",
        data={"status": "invalid_status"}
    )
    assert response.status == 422
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()