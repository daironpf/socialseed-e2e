"""Test: Get Notification

Run: pytest services/notifications_demo/modules/03_get_notification.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

async def run(page: BasePage):
    create_resp = await page.post(f"{BASE_URL}/api/notifications", data={"user_id": "user1", "channel": "email", "body": "Test"})
    notif = create_resp.json()
    response = await page.get(f"{BASE_URL}/api/notifications/{notif['id']}")
    assert response.status == 200
    assert response.json()["id"] == notif["id"]
    return response

if __name__ == "__main__":
    import asyncio
    from playwright.async_api import async_playwright
    async def main():
        async with async_playwright() as p:
            browser = await p.chromium.launch()
            page = await browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            await run(base_page)
            await browser.close()
    asyncio.run(main())
