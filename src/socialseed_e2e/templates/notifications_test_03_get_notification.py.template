"""Test: Get Notification

Run: pytest services/notifications_demo/modules/03_get_notification.py
"""
from socialseed_e2e import BasePage
BASE_URL = "http://localhost:5007"

def run(page: BasePage):
    create_resp = page.post("/api/notifications", data={"user_id": "user1", "channel": "email", "body": "Test"})
    notif = create_resp.json()
    response = page.get("/api/notifications/{notif['id']}")
    assert response.status == 200
    assert response.json()["id"] == notif["id"]
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()