"""Test: Double Booking Prevention

Run: pytest services/booking_demo/modules/09_double_booking.py
"""

from datetime import datetime, timedelta
from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    same_time = (datetime.now() + timedelta(days=6)).replace(hour=9, minute=0, second=0)
    
    resp1 = page.post("/api/appointments", data={
        "service_id": "svc_1",
        "user_id": "user_a",
        "start_time": same_time.isoformat()
    })
    assert resp1.status == 200
    
    resp2 = page.post("/api/appointments", data={
        "service_id": "svc_1",
        "user_id": "user_b",
        "start_time": same_time.isoformat()
    })
    assert resp2.status == 409
    assert "not available" in resp2.json()["detail"].lower()
    return resp2

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()