"""Test: List and Get Users

This test demonstrates:
- GET endpoints
- Response validation

Run:
    pytest services/chat_demo/modules/02_list_users.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


async def run(page: BasePage):
    response = await page.get(f"{BASE_URL}/api/users")
    assert response.status == 200
    data = response.json()
    assert len(data) >= 5
    for user in data:
        assert "id" in user
        assert "username" in user
    return response


async def run_get_user(page: BasePage):
    response = await page.get(f"{BASE_URL}/api/users/user_1")
    assert response.status == 200
    data = response.json()
    assert data["id"] == "user_1"
    assert data["username"] == "alice"
    return response


async def run_not_found(page: BasePage):
    response = await page.get(f"{BASE_URL}/api/users/nonexistent")
    assert response.status == 404
    return response


if __name__ == "__main__":
    import asyncio
    from playwright.async_api import async_playwright
    
    async def main():
        async with async_playwright() as p:
            browser = await p.chromium.launch()
            page = await browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            await run(base_page)
            await browser.close()
    asyncio.run(main())
