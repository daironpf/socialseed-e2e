"""Test: List and Get Users

This test demonstrates:
- GET endpoints
- Response validation

Run:
    pytest services/chat_demo/modules/02_list_users.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    response = page.get("/api/users")
    assert response.status == 200
    data = response.json()
    assert len(data) >= 5
    for user in data:
        assert "id" in user
        assert "username" in user
    return response


def run_get_user(page: BasePage):
    response = page.get("/api/users/user_1")
    assert response.status == 200
    data = response.json()
    assert data["id"] == "user_1"
    assert data["username"] == "alice"
    return response


def run_not_found(page: BasePage):
    response = page.get("/api/users/nonexistent")
    assert response.status == 404
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()