"""Test: List Products with Pagination

This test demonstrates:
- Pagination testing
- Query parameters
- Response validation

Run:
    pytest services/ecommerce_demo/modules/01_list_products.py
"""

import pytest
from playwright.async_api import async_playwright
from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5004"


async def run(page: BasePage):
    """Execute the test."""
    response = await page.get(
        f"{BASE_URL}/api/products",
        params={"page": 1, "per_page": 5}
    )
    
    assert response.status == 200, f"Expected 200, got {response.status}"
    
    data = response.json()
    assert "data" in data, "Response should contain 'data'"
    assert "pagination" in data, "Response should contain 'pagination'"
    
    pagination = data["pagination"]
    assert pagination["page"] == 1
    assert pagination["per_page"] == 5
    assert len(data["data"]) <= 5, "Should return at most 5 products"
    
    return response


if __name__ == "__main__":
    import asyncio
    from playwright.async_api import async_playwright
    
    async def main():
        async with async_playwright() as p:
            browser = await p.chromium.launch()
            page = await browser.new_page()
            
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            
            await run(base_page)
            
            await browser.close()
    
    asyncio.run(main())
