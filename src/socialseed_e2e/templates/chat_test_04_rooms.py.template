"""Test: List and Create Rooms

This test demonstrates:
- List resources
- POST with nested objects

Run:
    pytest services/chat_demo/modules/04_rooms.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_list(page)


def run_list(page: BasePage):
    response = page.get("/api/rooms")
    assert response.status == 200
    data = response.json()
    assert len(data) >= 3
    return response


def run_create(page: BasePage):
    response = page.post(
        "/api/rooms",
        data={
            "name": "test-room",
            "room_type": "group",
            "is_private": False,
            "member_ids": ["user_1", "user_2"]
        }
    )
    assert response.status == 200
    data = response.json()
    assert data["name"] == "test-room"
    assert data["room_type"] == "group"
    return response


def run_get_room(page: BasePage):
    response = page.get("/api/rooms/room_1")
    assert response.status == 200
    data = response.json()
    assert data["id"] == "room_1"
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()