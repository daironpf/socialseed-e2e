"""Test: Reschedule Appointment

Run: pytest services/booking_demo/modules/07_reschedule.py
"""

from datetime import datetime, timedelta
from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    future_date = (datetime.now() + timedelta(days=4)).replace(hour=14, minute=0, second=0)
    create_resp = page.post("/api/appointments", data={
        "service_id": "svc_3",
        "user_id": "user3",
        "start_time": future_date.isoformat()
    })
    appointment = create_resp.json()
    appointment_id = appointment["id"]
    
    new_time = (datetime.now() + timedelta(days=5)).replace(hour=15, minute=30, second=0)
    reschedule_resp = page.post(
        "/api/appointments/{appointment_id}/reschedule",
        params={"user_id": "user3"},
        data={"start_time": new_time.isoformat()}
    )
    assert reschedule_resp.status == 200
    data = reschedule_resp.json()
    return data

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()