"""Test: Room Membership

This test demonstrates:
- Join/leave room
- Membership management

Run:
    pytest services/chat_demo/modules/06_membership.py
"""

from socialseed_e2e import BasePage


BASE_URL = "http://localhost:5005"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_join(page)


def run_join(page: BasePage):
    response = page.post(
        "/api/rooms/room_1/join",
        params={"user_id": "user_1"}
    )
    assert response.status in [200, 400]
    return response


def run_leave(page: BasePage):
    response = page.post(
        "/api/rooms/room_1/leave",
        params={"user_id": "user_1"}
    )
    assert response.status in [200, 404]
    return response


def run_members(page: BasePage):
    response = page.get("/api/rooms/room_1/members")
    assert response.status == 200
    data = response.json()
    assert isinstance(data, list)
    return response


if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()