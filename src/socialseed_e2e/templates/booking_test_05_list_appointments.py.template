"""Test: List Appointments

Run: pytest services/booking_demo/modules/05_list_appointments.py
"""

from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    response = page.get("/api/appointments", params={"user_id": "user1"})
    assert response.status == 200
    data = response.json()
    assert isinstance(data, list)
    return response

def run_filtered(page: BasePage):
    response = page.get("/api/appointments", params={"user_id": "user1", "status": "confirmed"})
    assert response.status == 200
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()