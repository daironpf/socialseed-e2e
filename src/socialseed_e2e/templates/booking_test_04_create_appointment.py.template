"""Test: Create Appointment

Run: pytest services/booking_demo/modules/04_create_appointment.py
"""

from datetime import datetime, timedelta
from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"

def run(page: BasePage):
    future_date = (datetime.now() + timedelta(days=2)).replace(hour=10, minute=0, second=0)
    start_time = future_date.isoformat()
    response = page.post("/api/appointments", data={
        "service_id": "svc_1",
        "user_id": "user1",
        "start_time": start_time
    })
    assert response.status == 200
    data = response.json()
    assert data["service_id"] == "svc_1"
    assert data["user_id"] == "user1"
    assert data["status"] == "confirmed"
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()