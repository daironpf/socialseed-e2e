"""Test: Waitlist

Run: pytest services/booking_demo/modules/08_waitlist.py
"""

from datetime import date, timedelta
from socialseed_e2e import BasePage

BASE_URL = "http://localhost:5006"


def run(page: BasePage):
    """Execute the test - main entry point."""
    return run_join(page)


def run_join(page: BasePage):
    future_date = (date.today() + timedelta(days=10)).strftime("%Y-%m-%d")
    response = page.post("/api/services/svc_1/waitlist", data={
        "user_id": "user_wait1",
        "requested_date": future_date,
        "requested_time": "10:00"
    })
    assert response.status == 200
    data = response.json()
    assert data["status"] == "waiting"
    return data

def run_get(page: BasePage):
    response = page.get("/api/services/svc_1/waitlist")
    assert response.status == 200
    data = response.json()
    assert isinstance(data, list)
    return response

if __name__ == "__main__":
    from playwright.sync_api import sync_playwright
    
    def main():
        with sync_playwright() as p:
            browser = p.chromium.launch()
            page = browser.new_page()
            base_page = BasePage(base_url=BASE_URL)
            base_page.set_page(page)
            run(base_page)
            browser.close()
    
    main()